<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mp_size_10"
        android:id="@+id/llDocument"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/rlTodayClick"
            android:layout_width="28dp"
            android:layout_margin="@dimen/mp_size_10"
            android:layout_height="28dp"
            android:tint="@color/black_tranparency_80"

            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_document"
             />

        <TextView
            android:id="@+id/tvTodayTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mp_size_10"
            android:text="Document"
            android:fontFamily="@font/opensans_semibold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack2"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llDocument"
        android:alpha="0.3"
        android:background="@color/colorLightgrey"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mp_size_10"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal" >
            <ImageView

                android:layout_width="28dp"
                android:layout_margin="@dimen/mp_size_10"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_ticket_home"
                android:tint="@color/black_tranparency_80"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mp_size_10"
                android:fontFamily="@font/opensans_semibold"
                android:text="Ticket"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llDocument"
            android:alpha="0.3"
            android:background="@color/colorLightgrey"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mp_size_10"
            android:id="@+id/llTicket"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal" >
            <ImageView

                android:layout_width="28dp"
                android:layout_margin="@dimen/mp_size_10"
                android:layout_height="28dp"
                android:tint="@color/black_tranparency_80"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_report"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mp_size_10"
                android:text="Report"
                android:fontFamily="@font/opensans_semibold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack2"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llDocument"
            android:alpha="0.3"
            android:background="@color/colorLightgrey"></View>
    </LinearLayout>

</RelativeLayout>